{
  "name": "Smartcat translation helper",
  "version": "0.1.1",
  "description": "Quickly prefill target with Google translation text",
  "permissions": [
    "tabs",
    "activeTab",
    "*://translate.google.com/#*"
  ],
  "background": {
    "scripts": [
      "content-scripts/constant.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "css": [
        "lib/bootstrap.min.css"
      ],
      "js": [
        "lib/jquery.min.js",
        "lib/popper.min.js",
        "lib/bootstrap.min.js",
        "content-scripts/helper.js",
        "content-scripts/constant.js",
        "content-scripts/content.js"
      ],
      "matches": [
        "*://*.smartcat.ai/*"
      ]
    }
  ],
  "icons": {
    "16": "media/icon/16.png",
    "48": "media/icon/48.png",
    "128": "media/icon/128.png"
  },
  "manifest_version": 2
}
